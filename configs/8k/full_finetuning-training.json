{
    "datasets": [
        {
            "data_class": "DebugDataset",
            "data_name": "sst2",
            "data_sampling_proportion": 1,
            "max_input_tokens": 4096,
            "max_output_tokens": 4096
        }
    ],
    "model_name": "bigcode/starcoder",
    "model_class": "GPTMegatronForCausalLM",
    "training_inference_type": "full_finetuning",
    "experiment_name": "starcoder-15b-8k",
    "attention_implementation": "flash",
    "save_path": "checkpoints",
    "gradient_checkpointing": true,
    "logdir": "logs",
    "num_training_steps": 100,
    "eval_interval": 50,
    "save_interval": 50,
    "batch_size_per_gpu": 6,
    "dtype": "bfloat16",
    "learning_rate": 1e-5,
    "optimizer": {
        "optimizer_class": "ApexFusedAdam",
        "lr": 1e-5,
        "weight_decay": 0.1,
        "betas": [0.9, 0.95],
        "eps": 1e-10
    },
    "lr_schedule": "cosine"
}
