{
    "datasets": [
        {
            "class_name": "SST2Dataset",
            "data_name": "sst2",
            "input_format": "\n__input__\nSentiment:",
            "output_format": " __output__",
            "data_sampling_ratio": 1,
            "max_input_tokens": 1024,
            "max_output_tokens": 128
        }
    ],
    "model_args": {
        "model_name": "bigscience/bloom-560m",
        "model_class": "AutoModelForCausalLM",
        "dtype": "bfloat16"
    },
    "tuning_args": {
        "tuning_method": "prompt_tuning",
        "prompt_tuning_init": "TEXT",
        "prompt_tuning_init_text": "Classify the sentiment of the sentence:",
        "num_virtual_tokens": 8
    },
    "load_args": {
        "load_path": "checkpoints/prompt_tuning",
        "iteration": 4000
    },
    "generation_parameters": {
        "batch_size": 8,
        "do_sample": false,
        "max_new_tokens": 100
    },
    "output_dir": "outputs"
}
